@model CreateUserRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Form-v5 by Colorlib</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="/colorlib-regform-31/css/roboto-font.css">
	<link rel="stylesheet" type="text/css" href="/colorlib-regform-31/fonts/font-awesome-5/css/fontawesome-all.min.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="/colorlib-regform-31/css/style.css" />
</head>
<body class="form-v5">
	<div class="page-content">
		<div class="form-v5-content">
			<form class="form-detail" action="#" method="post">
				<h2>Movie Api Yeni Kullanıcı Kaydı</h2>
				<div class="form-row">
					<label for="full-name">Adınız</label>
					<input type="text" asp-for="Name" id="full-name" class="input-text" placeholder="adınız.." required>
					<i class="fas fa-user"></i>
				</div>
				<div class="form-row">
					<label for="full-name">Soyadınız</label>
					<input type="text" asp-for="Surname" id="full-name" class="input-text" placeholder="soyadınız.." required>
					<i class="fas fa-car"></i>
				</div>
				<div class="form-row">
					<label for="full-name">Kullanıcı Adınız</label>
					<input type="text" asp-for="Username" id="full-name" class="input-text" placeholder="kullanıcı adınız.." required>
					<i class="fas fa-admin"></i>
				</div>
				<div class="form-row">
					<label for="your-email"> Email Adresi</label>
					<input type="text" asp-for="Email" id="your-email" class="input-text" placeholder="test@gmail.com" required>
					<i class="fas fa-envelope"></i>
				</div>
				<div class="form-row">
					<label for="password">Şifreniz</label>
					<input type="password" asp-for="Password" id="password" class="input-text" placeholder="********" required>
					<i class="fas fa-lock"></i>
				</div>
				<div class="form-row-last">
					<input type="submit"  class="register" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
</body>
</html>